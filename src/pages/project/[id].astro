---
import '../../styles/global.css';
import { projects } from '../../data/projects';
import ArchitectureBackground from '../../components/ArchitectureBackground.tsx';

// Génération des chemins pour chaque projet
export function getStaticPaths() {
  return projects.map((project) => ({
    params: { id: project.id },
    props: { project },
  }));
}

const { project } = Astro.props;
---

<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{project.title} | Abigael Berrebi</title>
</head>
<body class="text-[#1a1a1a]">
    
    {/* 1. L'arrière-plan animé (fixe derrière) */}
    <ArchitectureBackground client:load />

    {/* 2. Le contenu au premier plan (z-10) */}
    <div class="relative z-10">

        {/* Navigation Retour (Fixe en haut à gauche) */}
        <nav class="fixed top-0 left-0 w-full p-6 z-50 mix-blend-difference text-white">
            <a href="/portfolio/" class="text-sm uppercase tracking-widest hover:underline flex items-center gap-2">
                ← Index
            </a>
        </nav>

        <main>
            {/* Grande Image Hero */}
            <div class="w-full h-[60vh] md:h-[80vh] overflow-hidden bg-gray-200">
                <img 
                    src={project.image} 
                    alt={project.title} 
                    class="w-full h-full object-cover"
                    onerror="this.src='https://placehold.co/1920x1080/e5e5e5/a3a3a3?text=VISUEL+PROJET'" 
                />
            </div>

            {/* Contenu du Projet */}
            <div class="max-w-5xl mx-auto px-6 py-20 grid grid-cols-1 md:grid-cols-3 gap-12 bg-[#f4f4f5]/80 backdrop-blur-sm md:bg-transparent">
                
                {/* Colonne 1 : Titre & Infos */}
                <div class="md:col-span-1 space-y-8 border-t border-black pt-4">
                    <div>
                        <h1 class="text-3xl font-light leading-tight mb-2">{project.title}</h1>
                        <p class="text-gray-500 text-sm uppercase tracking-widest">{project.category}</p>
                    </div>

                    <div class="font-mono text-xs space-y-2 text-gray-600">
                        <p><span class="opacity-50">LIEU:</span> {project.location}</p>
                        <p><span class="opacity-50">ANNÉE:</span> {project.year}</p>
                        <div class="pt-4 flex flex-wrap gap-2">
                            {project.tags.map(tag => (
                                <span class="border border-gray-400 px-2 py-1 rounded-full">{tag}</span>
                            ))}
                        </div>
                    </div>
                </div>

                {/* Colonne 2 : Description & Images Détails */}
                <div class="md:col-span-2 space-y-12 border-t border-gray-300 pt-4">
                    <p class="text-lg leading-relaxed font-light text-justify">
                        {project.description}
                    </p>

                    {/* Placeholder pour d'autres images */}
                    <div class="space-y-4">
                        <div class="w-full h-64 bg-gray-200 flex items-center justify-center text-gray-400 font-mono text-xs border border-dashed border-gray-400">
                            [ VUE EN COUPE ]
                        </div>
                        <div class="w-full h-64 bg-gray-200 flex items-center justify-center text-gray-400 font-mono text-xs border border-dashed border-gray-400">
                            [ PLAN DE MASSE ]
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <footer class="py-10 text-center text-xs text-gray-400 font-mono">
            © 2025 Abigael Berrebi
        </footer>
    </div>
</body>
</html>