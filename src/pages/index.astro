---
import '../styles/global.css';
import HouseConstruction from '../components/HouseConstruction.tsx';
import ProjectGallery from '../components/ProjectGallery.tsx';
import ArchitectureBackground from '../components/ArchitectureBackground.tsx';
---

<html lang="fr">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Abigael Berrebi | Architecture</title>
	</head>
	<body class="text-[#1a1a1a] bg-white">
        
        {/* Le background animé reste subtil derrière */}
        <ArchitectureBackground client:load />

        <div class="relative z-10">
            {/* 1. SECTION HERO : Animation de construction au scroll */}
            <HouseConstruction client:load />

            {/* Header qui apparait après */}
            <header class="py-12 px-6 md:px-12 max-w-7xl mx-auto text-center border-b border-gray-100">
                <h1 class="text-4xl font-bold tracking-tight">ABIGAEL BERREBI</h1>
                <p class="text-gray-400 text-sm mt-2">PORTFOLIO ARCHITECTURE</p>
            </header>

            {/* 2. SECTION GALERIE : Liste des projets */}
            <main>
                <ProjectGallery client:load />
            </main>

            <footer class="py-20 text-center text-sm text-gray-400 font-mono bg-gray-50 mt-12">
                <p>abigaelberrebi@gmail.com</p>
                <p class="mt-2">© 2025 — Tous droits réservés.</p>
            </footer>
        </div>
	</body>
</html>